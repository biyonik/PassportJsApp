<!-- Outer Row -->
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">Parolamı Sıfırla</h1>
                                <p class="mb-4">Yeni bir parola oluşturun!</p>
                            </div>
                            <form class="user" method="post" action="/reset_password" accept-charset="UTF-8">
                                <input type="hidden" name="link_id" value="<%- id %>">
                                <input type="hidden" name="link_token" value="<%- token %>">
                                <div class="form-group">
                                    <input type="password" name="password" class="form-control form-control-user"
                                           id="password"
                                           placeholder="Parolanız...">
                                    <span id="password_error" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password_confirm" class="form-control form-control-user"
                                           id="password_confirm"
                                           placeholder="Parola Tekrar...">
                                    <span id="password_confirm_error" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Şifremi Sıfırla
                                </button>
                            </form>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% if(locals.validation_errors !== undefined) { %>
    <script type="text/javascript">
        let valid_errs = '<%= JSON.stringify(locals.validation_errors) %>'
        valid_errs = JSON.parse(valid_errs.replace(/&#34;/g, '"'));
        console.log(valid_errs);
        document.addEventListener("DOMContentLoaded", function () {
            valid_errs.forEach(function (error) {
                document.querySelector(`#${error.param}`).classList.add('border-danger');
                document.querySelector(`#${error.param}_error`).textContent = error.msg;
            });
        });
    </script>
<% } %>

